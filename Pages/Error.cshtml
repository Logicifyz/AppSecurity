@page "/Error/{code?}"
@model ApplicationSecurityICA2.Pages.ErrorModel
@{
    Layout = "_Layout";
    var code = Model.StatusCode ?? 500;
    ViewData["Title"] = "Error " + code;
}
<div class="error-container">
    <h1>Error @code</h1>
    <p>@Model.ErrorMessage</p>
    <p>If you continue to experience issues, please contact support.</p>
    <p><a href="/Home">Return to Home Page</a></p>
</div>
